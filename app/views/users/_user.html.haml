%h3= link_to user.email, feed_user_path(user)
- if user.followed_by(current_user)
  = button_to "Remove from Team", follow_path(user.followed_by(current_user)), method: :delete, :class => "btn btn-primary btn-sm btn-danger"
- else
  = form_for :follow, url: follows_path do |f|
    = f.hidden_field :target_id, value: user.id
    = button_to "Add To Team", nil, class: "btn btn-warning btn-sm btn-default"
    / <input class="btn btn-primary btn-sm btn-default" type="submit" value="Follow">