= link_to '' do
  .img-thumbnail.well-sm
    %p
      %small.text-muted
        = when_pinned(activity)
    = image_tag diplay_pinned_image activity
    - @feedbacks.each do |feedback|
      = feedback.name

    %p
      %strong= activity['actor'].email
      pinned
      %strong= activity['object'].title
.evaluate-container
  = form_for(:feedback, url: { controller: "feedbacks", action: "create", method: "post"}) do |f|
    = hidden_field_tag(:item_id, activity['object'].id)
    = f.label "Like it"
    = f.radio_button :name, 'Like'
    = f.label "Love it"
    = f.radio_button :name, 'Love'
    = f.label "Leave it"
    = f.radio_button :name, 'Leave'

    = f.submit "send feedback"